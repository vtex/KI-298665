{
  "compilerOptions": {
    "types": ["node", "jest"],
    "lib": [
      "ES2019",
      "ESNext"
    ],
    "typeRoots": ["node_modules/@types"],
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "checkJs": false,
    "esModuleInterop": true,
    "noEmitOnError": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true
  },
  "typeAcquisition": {
    "enable": false
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
